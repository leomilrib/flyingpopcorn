<div class="row">
  <div class="twelve columns">
    <%= erb(:calendar, locals: { result: @result }) if @result %>
  </div>
</div>

<form action="/" method="post">
  <div class="row">
    <div class="twelve columns">
      <label for="cost">Cost per day:</label>
      <input type="number" min="0" step="0.5" id="cost" class="u-full-width" name="cost" value="" placeholder="cost per day">
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <%= erb :buttons, locals: { field: 'cost' } %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <label>Usage:</label>
    </div>
  </div>

  <div class="row center">
    <div class="twelve columns">
      <label></label>
      <% [:sunday, :monday, :tuesday, :wednesday, :thursday, :friday, :saturday].each do |day| %>
        <% checked, active_week = (day != :sunday && day != :saturday) ? [' checked ', ' button-primary'] : ['',''] %>
        <label for="<%= day %>" class="button<%= active_week %> week_day"><%= day %></label>
        <input id="<%= day %>" class="hidden" type="checkbox" <%= checked %> name="week_days[]" value="<%= day %>">
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <label for="balance">Balance:</label>
      <input type="number" min="0" step="0.5" id="balance" class="u-full-width" name="balance" value="" placeholder="balance">
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <%= erb :buttons, locals: { field: 'balance' } %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <label for="date">On date:</label>
      <input type="text" id="date" class="u-full-width" name="date" value="<%= @today %>" placeholder="dd/mm/yyyy">
    </div>
  </div>

  <div class="row center">
    <div class="twelve columns">
      <input type="submit" value="Show me when!">
    </div>
  </div>
</form>
